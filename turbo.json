{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["build"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "storybook": {
            "cache": false,
            "persistent": true
        },
        "release": {
            "dependsOn": ["^build"]
        },
        "build-storybook": {
            "dependsOn": ["^build"]
        },
        "publish": {
            "dependsOn": ["^build"]
        }
    }
}
